<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MuseumFusion.SignInPage"
             Title="SignInPage">
    <StackLayout>
        <Label Text="Sign In" FontSize="24" FontAttributes="Bold" HorizontalOptions="CenterAndExpand" Margin="0,20"/>

       
        <Entry Placeholder="Email" x:Name="EmailEntry" Margin="20"/>
        <Entry Placeholder="Password" IsPassword="True" x:Name="PasswordEntry" Margin="20"/>

        <Button Text="Sign In" Clicked="OnSignInClicked" HorizontalOptions="CenterAndExpand" Margin="20"/>

        <Button Text="Sign Up" Clicked="OnSignUpClicked" HorizontalOptions="CenterAndExpand" Margin="0,10"/>
    </StackLayout>
</ContentPage>