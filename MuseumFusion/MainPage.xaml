<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MuseumFusion.MainPage">

    <ScrollView>
        <StackLayout>
            <Frame BackgroundColor="LightGray" Padding="10" Margin="10" >
                <Frame.GestureRecognizers>
                    <TapGestureRecognizer Command="{Binding MuseumBlockTappedCommand}"/>
                </Frame.GestureRecognizers>
                
                <StackLayout Margin="10">

                    <Image Source="museum1.jpg" Aspect="AspectFill" HeightRequest="200"/>
                    <Label Text="{Binding MuseumName}" FontSize="20" FontAttributes="Bold"/>
                    <StackLayout Orientation="Horizontal">
                        <Label Text="{Binding MuseumSubtitle}" FontSize="14" TextColor="Black"/>
                        <Label Text="{Binding TodayDate}" FontSize="14" TextColor="Maroon" HorizontalOptions="End"/>
                    </StackLayout>
                </StackLayout>
            </Frame>
        
        </StackLayout>





        
    </ScrollView>

</ContentPage>
